class Solution
{
    static int RecursivePower(int n,int p)
    {
        // add your code here
        //base case
        //if(p==0) return 1;
        //if(p==1) return n;
        
        //return n*RecursivePower(n, p-1);
        
        if(p==0) return 1;
        if(p==1) return n;
        
        int pow = RecursivePower(n,p/2);
        pow = pow*pow;
        if(p%2==0) return pow;
        else return pow*n;
    }
 
}
