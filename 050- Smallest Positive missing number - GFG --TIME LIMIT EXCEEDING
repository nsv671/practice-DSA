
//NAIVE SOLUTION
//TIME COMPLEXITY O(n^2)
//TIMELIMIT EXCEEDING

class Solution
{
    //Function to find the smallest positive number missing from the array.
    static int missingNumber(int arr[], int size)
    {
         int n = 1000000;
         Your code here
         for(int i=1; i<=size+1; i++){
             boolean flag = false;
             for(int j=0; j<size; j++){
                 if(i==arr[j]) flag=true;
             }
            
             if(!flag) return i;
         }
        
         return -1;  
    }
}
