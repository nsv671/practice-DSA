        //     temp <<= 1;
        //     System.out.print("temp in bit" +temp);
        //     if((n&temp) != 0){
        //         return counter;
        //     }
        // }
        // return 0;
        
        couter =0;
         while(n!=0){
             counter++;
             if((n&1)==1) return counter;
             n>>=1;
         }
         return counter;
    }
}
