/*
1- we are doing the k right shift
2- doing the bit wise AND operation with the no
*/
class CheckBit
{
    // Function to check if Kth bit is set or not.
    static boolean checkKthBit(int n, int k)
    {
        // Your code here
	//doing right shift on n
        if(((n>>k)&1)==1) return true;
	
	//doing left shift on 1 (k-1 times)
	// if((n&(1<<(k-1)))==1) return true;
        return false;
    }
    
}
